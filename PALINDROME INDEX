using System;

class Solution
{
    static int PalindromeIndex(string s)
    {
        int left = 0;
        int right = s.Length - 1;

        while (left < right)
        {
            if (s[left] != s[right])
            {
                if (IsPalindrome(s, left + 1, right)) return left;
                if (IsPalindrome(s, left, right - 1)) return right;
                return -1;
            }
            left++;
            right--;
        }

        return -1; // Already a palindrome
    }

    static bool IsPalindrome(string s, int left, int right)
    {
        while (left < right)
        {
            if (s[left] != s[right])
                return false;
            left++;
            right--;
        }
        return true;
    }

    static void Main(string[] args)
    {
        int q = int.Parse(Console.ReadLine());
        for (int i = 0; i < q; i++)
        {
            string s = Console.ReadLine();
            Console.WriteLine(PalindromeIndex(s));
        }
    }
}
