using System;

class Solution
{
    static int makingAnagrams(string s1, string s2)
    {
        // Frequency arrays for 26 lowercase letters
        int[] freq1 = new int[26];
        int[] freq2 = new int[26];

        // Count frequency of characters in s1
        foreach (char c in s1)
            freq1[c - 'a']++;

        // Count frequency of characters in s2
        foreach (char c in s2)
            freq2[c - 'a']++;

        int deletions = 0;

        // Sum absolute differences for each letter
        for (int i = 0; i < 26; i++)
            deletions += Math.Abs(freq1[i] - freq2[i]);

        return deletions;
    }

    static void Main()
    {
        string s1 = Console.ReadLine();
        string s2 = Console.ReadLine();

        Console.WriteLine(makingAnagrams(s1, s2));
    }
}
