using System;

class Solution
{
    static int Anagram(string s)
    {
        if (s.Length % 2 != 0)
            return -1;

        int mid = s.Length / 2;
        string s1 = s.Substring(0, mid);
        string s2 = s.Substring(mid);

        int[] count = new int[26];

        // Count frequency of each letter in s1
        foreach (char c in s1)
        {
            count[c - 'a']++;
        }

        // Subtract frequency based on letters in s2
        foreach (char c in s2)
        {
            count[c - 'a']--;
        }

        // Count the total positive differences (needed changes)
        int changes = 0;
        foreach (int c in count)
        {
            if (c > 0)
                changes += c;
        }

        return changes;
    }

    static void Main(string[] args)
    {
        int t = int.Parse(Console.ReadLine());
        for (int i = 0; i < t; i++)
        {
            string s = Console.ReadLine();
            Console.WriteLine(Anagram(s));
        }
    }
}
